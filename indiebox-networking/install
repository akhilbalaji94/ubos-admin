## arg 1:  the new package version
pre_install() {
    # not used
    true
}

## arg 1:  the new package version
post_install() {
    systemctl enable indiebox-networking
    systemctl start indiebox-networking
}

## arg 1:  the new package version
## arg 2:  the old package version
pre_upgrade() {
    systemctl stop indiebox-networking
    systemctl disable indiebox-networking
}

## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
    systemctl daemon-reload
    systemctl enable indiebox-networking
    systemctl start indiebox-networking
}

## arg 1:  the old package version
pre_remove() {
    systemctl stop indiebox-networking
    systemctl disable indiebox-networking
}

## arg 1:  the old package version
post_remove() {
    # not used
    true
}
