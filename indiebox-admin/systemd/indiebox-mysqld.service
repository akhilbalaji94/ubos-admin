[Unit]
Description=MariaDB database server configured for Indie Box
After=syslog.target
Conflicts=mysqld.service

[Service]
User=mysql
Group=mysql

ExecStart=/usr/bin/mysqld --defaults-file=/etc/mysql/mysql-indiebox.cnf --pid-file=/run/mysqld/mysqld.pid
ExecStartPost=/usr/bin/mysqld-post

Restart=always
PrivateTmp=true

[Install]
WantedBy=multi-user.target
