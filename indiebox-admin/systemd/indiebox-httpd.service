[Unit]
Description=Apache Web Server configured for Indie Box
After=network.target remote-fs.target nss-lookup.target
Conflicts=httpd.service

[Service]
Type=forking
PIDFile=/run/httpd/httpd.pid
ExecStart=/usr/share/indiebox-admin/bin/apachectl start
ExecStop=/usr/share/indiebox-admin/bin/apachectl graceful-stop
ExecReload=/usr/share/indiebox-admin/bin/apachectl graceful
PrivateTmp=true
LimitNOFILE=infinity

[Install]
WantedBy=multi-user.target
