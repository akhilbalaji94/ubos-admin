use strict;
use warnings;

use IndieBox::Utils;

my $commands = IndieBox::Utils::findPerlShortModuleNamesInPackage( 'IndieBox::Commands' );

unless( @ARGV ) {
    synopsisHelpQuit();
}
my $command = shift @ARGV;
if( '--help' eq $command || '-h' eq $command ) {
    synopsisHelpQuit( 1 );
}

my $commandPackage = $commands->{$command};
if( $commandPackage ) {
    foreach my $arg ( @ARGV ) {
        if( '--help' eq $arg || '-h' eq $arg ) {
            if( $commandPackage ) {
                synopsisHelpQuit( 1, $command );
            } else {
                synopsisHelpQuit( 1 );
            }
        }
    }

    my $result = IndieBox::Utils::invokeMethod( $commandPackage . '::run', @ARGV );

    exit !$result;
} else {
    synopsisHelpQuit();
}

#####
# Print synopsis or help
# $long: if true, print long help
# $helpFor: if given, only provide help on this command
sub synopsisHelpQuit {
    my $long    = shift;
    my $helpFor = shift;

    unless( $helpFor ) {
        if( $long ) {
            print <<END;
The central administration command for Indie Box. For more information about
Indie Box, see http://indiebox.net/

This command may be invoked in the following ways:

END
        } else {
            print "Synopsis:\n";
        }
    }

	my $cmd = $0;
	$cmd =~ s!.*/!!;

    foreach my $command ( sort keys %$commands ) {
        if( !$helpFor || $command eq $helpFor ) {
            my $package      = $commands->{$command};
            my $synopsisHelp = IndieBox::Utils::invokeMethod( $package . '::synopsisHelp' ) || '';

            if( $synopsisHelp ) { # skip commands that don't have this
                while( my( $synopsis, $help ) = each %$synopsisHelp ) {
                    $synopsis =~ s!^\s+!!;
                    $synopsis =~ s!\s+$!!;

                    print "    $cmd $command" . ( $synopsis ? " $synopsis" : '' ) . "\n";
                    if( $long || $helpFor ) {
                        $help =~ s!^\s+!!gm;
                        $help =~ s!\s+$!!gm;
                        $help =~ s!^!        !gm;

                        print "$help\n\n";
                    }
                }
            }
        }
    }

    unless( $helpFor ) {
        print "    $cmd --help\n";
        if( $long ) {
            print <<END;
        Display help text.

END
        }
        print "    $cmd <command> [<args>...] --help\n";
        if( $long ) {
            print <<END;
        Display help text for this command.

END
        }
    }

    exit 0;
}

1;
