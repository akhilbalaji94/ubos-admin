use strict;
use warnings;

use UBOS::Logging;

UBOS::Logging::initialize( $ARGV[0], 'service-stop', 0, '/etc/ubos/log-system.conf' );

notice( 'Stopping ' . $ARGV[0] . '.service' );

1;
