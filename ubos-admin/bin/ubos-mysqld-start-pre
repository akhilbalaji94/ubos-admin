use strict;
use warnings;

use UBOS::Logging;
use UBOS::Utils;

my $datadir = '/var/lib/mysql';
my $exit    = 0;

UBOS::Logging::initialize( 'ubos-mysqld', 'service-start', 0, '/etc/ubos/log-system.conf' );

notice( 'Starting ubos-mysqld.service' );

unless( -e "$datadir/ibdata1" ) {
    if( UBOS::Utils::myexec( "mysql_install_db --user=mysql --basedir=/usr --datadir=$datadir" )) {
        error( 'Failed to initialize MySQL/mariadb:' );
        $exit = 1;
    }
}

exit $exit;

1;
